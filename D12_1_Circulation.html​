<body>
<script>
    //案例：判断用户输入的数字是不是大于100
    var score;
    score = +(window.prompt("请输入一个0到100的分数\n"));
    if(score > 100){
        parseInt(score);
    }
    //实现一个99乘法表
    for(var i=1;i<=9;i++){
        for(var j=1;j<=i;j++){
            document.write("<span>"+j+"*"+i+"="+i*j+"</span>")
        }
        document.write("<br/>")
    }
</script>
